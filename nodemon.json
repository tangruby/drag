{
    "restartable": "rs",
    "env": { "NODE_ENV": "dev" },
    "ext": "js json",
    "watch":["server/**/*","index.js","nodemon.json","node_modules/**/*","config/webpack.dev.js",".babelrc"],
    "ignore": ["/output/**/*","/dist/**/*","/src/**/*","gulpfile.js"],
    "verbose": true,
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "execMap": {
        "js": "node --harmony"
    },
    "restartable": "rs"
}
